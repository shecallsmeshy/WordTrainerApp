<Window x:Class="WordTrainerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тренажер слов"
        Width="375" Height="667"
        MinWidth="375" MinHeight="667"
        MaxWidth="375" MaxHeight="667"
        SizeToContent="WidthAndHeight">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Категория -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="categoryComboBox" Width="200" SelectionChanged="CategoryComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Слово -->
            <Border Grid.Row="1" Margin="0,10" Padding="10" Background="#FFF5F5F5" CornerRadius="10">
                <TextBlock x:Name="wordTextBlock"
                           FontSize="28"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxWidth="600"/>
            </Border>

            <!-- Варианты ответов (сетка) -->
            <UniformGrid x:Name="optionsGrid" Grid.Row="2" Margin="0,10" Columns="2" HorizontalAlignment="Center">
                <!-- Кнопки с ответами будут добавляться динамически в коде -->
            </UniformGrid>

            <!-- Результат -->
            <TextBlock x:Name="resultTextBlock" Grid.Row="3"
                       FontSize="18" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Foreground="DarkGreen" Margin="0,10"/>

            <!-- Статистика -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock Text="Правильно: " FontWeight="Bold"/>
                <TextBlock x:Name="correctCountText" Margin="5,0"/>
                <TextBlock Text="| Неправильно: " FontWeight="Bold" Margin="10,0"/>
                <TextBlock x:Name="wrongCountText" Margin="5,0"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Добавить слово" Click="AddWord_Click" Margin="5" Padding="10,5"/>
                <Button Content="Следующее слово" Click="NextWord_Click" Margin="5" Padding="10,5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
