<Window x:Class="WordTrainerApp.Views.AddWordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить слово" Height="250" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Иностранное слово:" />
            <TextBox x:Name="foreignInput"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5,0,5">
            <TextBlock Text="Перевод:" />
            <TextBox x:Name="translationInput"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5,0,5">
            <TextBlock Text="Категория:" />
            <TextBox x:Name="categoryInput"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Добавить" Click="Add_Click" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>
